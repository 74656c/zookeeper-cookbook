define servicegroup { 
  servicegroup_name Zookeeper
  alias Zookeeper
}

define command {
  command_name    check_exhibitor
  command_line    $USER1$/check_exhibitor.py $ARG1$
}

define service {  
  use                       prod-service
  host_name                 services-prod

  servicegroups             Zookeeper
  service_description       ZooKeeper status
  check_command             check_exhibitor!<%= @host %>
  notes_url                 <%= @notes_url %>
}
